<div class="form-size field">
  <div class="form-group field">
    <%= f.label :店名（※必須） %><br />
    <%= f.text_field :store, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "店名を入力してください(20文字以内)" %>
  </div>

  <div class="form-group field">
    <%= f.label :商品名 %>
    <%= f.text_field :product_name, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "商品名を入力してください(20文字以内)" %>
  </div>

  <div class="form-group field">
    <%= f.label :価格（※必須） %><br />
    <%= f.text_field :price, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "価格を分かる範囲で数字で記入してください" %>
  </div>

  <div class="form-group field">
    <%= f.label :ラーメン画像（※必須） %><br />
    <%= f.file_field :photo, autofocus: true, class: "form-control file-field" %>
  </div>

  <div class="form-group field">
    <%= f.label :コメント（※必須） %><br />
    <%= f.text_area :comment, autofocus: true, class: "form-control text-field", rows: 5, placeholder: "ラーメンの味や感想、店内の雰囲気などを自由に記入しよう。(200文字以内)" %>
  </div>

  <%= f.label :詳細情報 , class: "detail-label" %><br />
  <div class="detail-info">
    <div class="form-group field">
      <div class="form-label">
        <%= f.label :総合評価 %><br />
      </div>
      <p>100点満点で評価をしてください。数字は直接入力できます。</p>
      <%= f.number_field(:evaluation, in: 1..100, step: '1') %>
    </div>
    <div class="form-group">
      <div class="form-label">
        <%= f.label :ジャンル %><br />
      </div>
      <%= f.select :genre, {'ラーメン': 'ラーメン', 'つけ麺': 'つけ麺', '油そば': '油そば', 'タンメン': 'タンメン', 'その他': 'その他'}, { include_blank: '選択してください'}, { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <div class="form-label">
        <%= f.label :スープ %><br />
      </div>
      <%= f.select :soup, {'醤油': '醤油', '味噌': '味噌', '豚骨': '豚骨', '塩': '塩', '魚介系': '魚介系', '煮干し': '煮干し', '家系': '家系', '次郎系': '次郎系', '坦々': '坦々', '辛口': '辛口', '高級食材系': '高級食材系', 'その他': 'その他'}, { include_blank: '選択してください'}, { class: 'form-control' } %>
    </div>
    <div class="form-group field">
      <div class="form-label">
        <%= f.label :味 %><br />
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :taste, "とてもあっさり", autofocus: true, class: "form-check-input" %>
        <%= f.label :とてもあっさり, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :taste, "あっさり", autofocus: true, class: "form-check-input" %>
        <%= f.label :あっさり, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :taste, "普通", autofocus: true, class: "form-check-input" %>
        <%= f.label :普通, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :taste, "濃いめ", autofocus: true, class: "form-check-input" %>
        <%= f.label :濃いめ, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :taste, "特濃", autofocus: true, class: "form-check-input" %>
        <%= f.label :特濃, class: "form-check-label" %>
      </div>
    </div>

    <div class="form-group field">
      <div class="form-label">
        <%= f.label :ボリューム %><br />
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :volume, "小盛り", autofocus: true, class: "form-check-input" %>
        <%= f.label :小盛り, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :volume, "普通", autofocus: true, class: "form-check-input" %>
        <%= f.label :普通, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :volume, "大盛り", autofocus: true, class: "form-check-input" %>
        <%= f.label :大盛り, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :volume, "特盛", autofocus: true, class: "form-check-input" %>
        <%= f.label :特盛, class: "form-check-label" %>
      </div>
    </div>

    <div class="form-group field">
      <div class="form-label">
        <%= f.label :麺の太さ %><br />
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :noodle, "細麺", autofocus: true, class: "form-check-input" %>
        <%= f.label :細麺, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :noodle, "中太", autofocus: true, class: "form-check-input" %>
        <%= f.label :中太, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :noodle, "太麺", autofocus: true, class: "form-check-input" %>
        <%= f.label :太麺, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :noodle, "平打ち麺", autofocus: true, class: "form-check-input" %>
        <%= f.label :平打ち麺, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :noodle, "ちぢれ麺", autofocus: true, class: "form-check-input" %>
        <%= f.label :ちぢれ麺, class: "form-check-label" %>
      </div>
    </div>

    <div class="form-group field">
      <div class="form-label">
        <%= f.label :油の量 %><br />
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :oily, "少なめ", autofocus: true, class: "form-check-input" %>
        <%= f.label :少なめ, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :oily, "普通", autofocus: true, class: "form-check-input" %>
        <%= f.label :普通, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :oily, "多め", autofocus: true, class: "form-check-input" %>
        <%= f.label :多め, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :oily, "ギトギト", autofocus: true, class: "form-check-input" %>
        <%= f.label :ギトギト, class: "form-check-label" %>
      </div>
    </div>

    <div class="form-group field">
      <div class="form-label">
        <%= f.label :チャーシュー %><br />
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :meat, "なし", autofocus: true, class: "form-check-input" %>
        <%= f.label :なし, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :meat, "薄切り", autofocus: true, class: "form-check-input" %>
        <%= f.label :薄切り, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :meat, "普通", autofocus: true, class: "form-check-input" %>
        <%= f.label :普通, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :meat, "厚切り", autofocus: true, class: "form-check-input" %>
        <%= f.label :厚切り, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :meat, "極厚", autofocus: true, class: "form-check-input" %>
        <%= f.label :極厚, class: "form-check-label" %>
      </div>
    </div>

    <div class="form-group field">
      <div class="form-label">
        <%= f.label :トッピングの量 %><br />
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :topping, "なし", autofocus: true, class: "form-check-input" %>
        <%= f.label :なし, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :topping, "少なめ", autofocus: true, class: "form-check-input" %>
        <%= f.label :少なめ, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :topping, "普通", autofocus: true, class: "form-check-input" %>
        <%= f.label :普通, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :topping, "多め", autofocus: true, class: "form-check-input" %>
        <%= f.label :多め, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :topping, "特盛", autofocus: true, class: "form-check-input" %>
        <%= f.label :特盛, class: "form-check-label" %>
      </div>
    </div>

    <div class="form-group field">
      <div class="form-label">
        <%= f.label :中毒性 %><br />
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :addictive, "なし", autofocus: true, class: "form-check-input" %>
        <%= f.label :なし, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :addictive, "ややあり", autofocus: true, class: "form-check-input" %>
        <%= f.label :ややあり, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :addictive, "あり", autofocus: true, class: "form-check-input" %>
        <%= f.label :あり, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :addictive, "猛毒", autofocus: true, class: "form-check-input" %>
        <%= f.label :猛毒, class: "form-check-label" %>
      </div>
    </div>

    <div class="form-group field">
      <div class="form-label">
        <%= f.label :混雑度 %><br />
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :croweded, "空いている", autofocus: true, class: "form-check-input" %>
        <%= f.label :空いている, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :croweded, "やや空いている", autofocus: true, class: "form-check-input" %>
        <%= f.label :やや空いている, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :croweded, "普通", autofocus: true, class: "form-check-input" %>
        <%= f.label :普通, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :croweded, "やや混雑", autofocus: true, class: "form-check-input" %>
        <%= f.label :やや混雑, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :croweded, "激混み", autofocus: true, class: "form-check-input" %>
        <%= f.label :激混み, class: "form-check-label" %>
      </div>
    </div>

    <div class="form-group field">
      <div class="form-label">
        <%= f.label :サービス %><br />
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :service, "良くない", autofocus: true, class: "form-check-input" %>
        <%= f.label :良くない, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :service, "あまり良くない", autofocus: true, class: "form-check-input" %>
        <%= f.label :あまり良くない, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :service, "普通", autofocus: true, class: "form-check-input" %>
        <%= f.label :普通, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :service, "良い", autofocus: true, class: "form-check-input" %>
        <%= f.label :良い, class: "form-check-label" %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :service, "とても良い", autofocus: true, class: "form-check-input" %>
        <%= f.label :とても良い, class: "form-check-label" %>
      </div>
    </div>
  </div>
  <div class="btn-center" type="submit">
    <%= f.submit "投稿", class: "btn btn-primary submit-btn" %>
  </div>
</div>