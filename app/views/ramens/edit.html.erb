<% provide(:title, "投稿の編集")%>
<div class="row white-container">
  <div class="col offset-4 col-4">
    <h2 class="title black-text-title">投稿の編集</h2>
    <%= form_for(@ramen, url: ramen_path(@ramen)) do |f| %>
    <%= render 'ramen_error_messages'%>
    <div class="col align-self-center form-size field">
      <div class="form-group field">
        <%= f.label :店名（※必須） %><br />
        <%= f.text_field :store, autofocus: true, class: "form-control", placeholder: "#{@ramen.store}", value: @ramen.store %>
      </div>

      <div class="form-group field">
        <%= f.label :商品名 %>
        <%= f.text_field :product_name, autofocus: true, class: "form-control", placeholder: "商品名を入力してください(20文字以内)" %>
      </div>

      <div class="form-group field">
        <%= f.label :価格（※必須） %><br />
        <%= f.text_field :price, autofocus: true, class: "form-control", placeholder: "価格を分かる範囲で数字で記入してください" %>
      </div>

      <div class="form-group field">
        <%= f.label :ラーメン画像（※必須） %><br />
        <%= f.file_field :photo, autofocus: true, class: "form-control file-field" %>
      </div>

      <div class="form-group field">
        <%= f.label :コメント（※必須） %><br />
        <%= f.text_area :comment, autofocus: true, class: "form-control text-field", rows: 5, placeholder: "ラーメンの味や感想、店内の雰囲気などを自由に記入しよう。(200文字以内)" %>
      </div>

      <div class="btn-center" type="submit">
        <%= f.submit "投稿", class: "btn btn-primary submit-btn" %>
      </div>
    </div>
    <% end %>
  </div>
</div>