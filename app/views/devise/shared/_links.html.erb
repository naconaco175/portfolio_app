<div class="device-link-block">
  <%- if controller_name != 'sessions' %>
  <%= link_to "ログイン", new_session_path(resource_name), class: "device-link" %><br />
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "サインアップ", new_registration_path(resource_name), class: "device-link" %><br />
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "パスワードをお忘れの場合はこちら", new_password_path(resource_name), class: "device-link" %><br />
  <% end %>

  <%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
  <%= link_to "#{OmniAuth::Utils.camelize(provider)}でサインアップする", omniauth_authorize_path(resource_name, provider), class: "device-link" %><br />
  <% end %>
  <% end %>
</div>