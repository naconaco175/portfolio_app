<% provide(:title, "ユーザーの更新")%>
<div class="row white-container">
  <div class="col offset-4 col-4">
    <h2 class="title black-text-title">ユーザーの更新・削除</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="col align-self-center form-size field">
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group field">
        <%= f.label :ユーザー名 %><br />
        <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "10文字以内で入力してください" %>
      </div>

      <div class="form-group　field">
        <%= f.label :現在のパスワード %><i>（※必須）</i><br />
        <%= f.password_field :current_password, autofocus: true, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="form-group　field">
        <%= f.label :新しいパスワード %> <i>(変更のない場合は空欄)</i><br />
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "６文字以上の英数字を入力してください" %>
      </div>

      <div class="form-group　field">
        <%= f.label :新しいパスワード確認用 %><br />
        <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "６文字以上の英数字を入力してください" %>
      </div>

      <div class="form-group field">
        <%= f.label :自己紹介 %><br />
        <%= f.text_area :profile, autofocus: true, class: "form-control text-field", rows: 5, placeholder: "好きなラーメンの系統やこだわりなど自分のプロフィールを書こう！(200文字以内)" %>
      </div>

      <div class="form-group field">
        <%= f.label :新しいプロフィール画像 %><br />
        <%= f.file_field :image, autofocus: true, class: "form-control file-field", placeholder: "６文字以上の英数字を入力してください" %>
      </div>

      <div class="btn-center" type="submit">
        <%= f.submit "更新", class: "btn btn-primary submit-btn" %>
      </div>
    </div>
    <% end %>
    <div class="btn-center">
      <%= button_to "アカウントの削除", registration_path(resource_name), data: { confirm: "本当に削除しますか？" }, method: :delete, class: "btn btn-secondary delete-btn" %>
    </div>
    <%= link_to "←Back", :back, class: "btn btn-outline-dark back-link" %>
  </div>
</div>