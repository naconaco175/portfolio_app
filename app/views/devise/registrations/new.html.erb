<div class="row white-container">
  <div class="col offset-4 col-4">
    <h2 class="title black-text-title">サインアップ</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="col align-self-center form-size field">
      <div class="form-group field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group field">
        <%= f.label :パスワード %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "６文字以上の英数字を入力してください" %>
      </div>

      <div class="form-group field">
        <%= f.label :パスワード確認用 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "６文字以上の英数字を入力してください" %>
      </div>

      <div class="btn-center" type="submit">
        <%= f.submit "サインアップ", class: "btn btn-primary submit-btn" %>
      </div>
    </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>