      <% else %>
      <%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-danger btn-sm nav-btn" %>
      <%= link_to "サインアップ", new_user_registration_path, class: "btn btn-danger btn-sm nav-btn" %>
      <% end %>
    </ul>
  </nav>
  <div class="navbar-image">
