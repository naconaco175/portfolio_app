<header>
  <div id="hamburger">
    <span class="inner_line" id="line1"></span>
    <span class="inner_line" id="line2"></span>
    <span class="inner_line" id="line3"></span>
  </div>
  <nav id="nav">
    <ul>
      <%= link_to "TOP", root_path, class: "nav-link text-danger" %>
      <%= link_to "ABOUT", pages_about_path(anchor: 'about'), class: "nav-link text-danger" %>
