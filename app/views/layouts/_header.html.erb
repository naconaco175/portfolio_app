      <%= link_to "MyPage", user_path(current_user), class: "nav-link text-danger" %>
      <%= link_to "ユーザー", users_path, class: "nav-link text-danger" %>
      <%= link_to "検索", ramens_search_path, class: "btn btn-danger btn-sm nav-btn search-btn" %>
